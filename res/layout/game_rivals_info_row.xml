<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_games_lists_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/half_transparent_gray"
    android:orientation="horizontal"
    android:padding="10dp" >

        <TextView
            android:id="@+id/game_activity_rivals_row_rival_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:text="@string/game_activity_rivals_row_default_rival_nickname_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/game_activity_rivals_row_rival_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/game_activity_rivals_row_default_rival_location_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

</LinearLayout>