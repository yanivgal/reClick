<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_games_lists_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7F9F9F9F"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_activity_games_row_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_games_row_game_default_name" />

            <TextView
                android:id="@+id/main_activity_games_row_game_num_of_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_activity_games_row_game_default_num_of_players" />
        </LinearLayout>

        <TextView
            android:id="@+id/main_activity_games_row_game_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_activity_games_row_game_default_description" />
    </LinearLayout>

    <Button
        android:id="@+id/main_activity_join_or_enter_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_join_or_enter_game_button_default_text" />

</LinearLayout>