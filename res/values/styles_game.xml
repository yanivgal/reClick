<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="game_activity_main_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="game_activity_pair_buttons_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="game_activity_pair_buttons_layout.top">
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="game_activity_pair_buttons_layout.bottom">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="game_activity_game_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="game_activity_game_image_button.blue">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@drawable/blue_button</item>
    </style>

    <style name="game_activity_game_image_button.green">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:src">@drawable/green_button</item>
    </style>

    <style name="game_activity_game_image_button.red">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@drawable/red_button</item>
    </style>

    <style name="game_activity_game_image_button.yellow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:src">@drawable/yellow_button</item>
    </style>

</resources>